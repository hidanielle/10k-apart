doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name="viewport", content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0")
    title 10k Apart Test
    link(rel='stylesheet', type='text/css', href='styles/app.css')
  body
    header
      h1 Tic Tac Toe
      p #[b A riveting game of skill. ]
      p Face off against a friend, X's vs. O's, by taking turns selecting a square. First one to create a line, diagonal or otherwise, wins.

    div.game-box(role="main")

      mixin row(number)
        .game-row

          fieldset
            legend._sr Row #{number} of 3

            each val in [1,2,3]

              .game-card
                fieldset
                  legend._sr(aria-describedby="Row "+val) Column #{val} of 3

                  input._sr(id=number+"-"+ val +"-1", type="radio", name=number+"-"+val, value="X")
                  label.x(for=number+"-"+ val +"-1")
                    svg(viewbox="0 0 40 40")
                      path(class="shape x", stroke="#395C6B", fill="transparent", stroke-width="5", d="M 10,10 L 30,30 M 30,10 L 10,30")

                  input._sr(id=number+"-"+ val +"-2", type="radio", name=number+"-"+val, value="O")
                  label.o(for=number+"-"+ val +"-2")
                    svg(viewbox="0 0 40 40")
                      circle(class="shape o", stroke="#80A4ED", stroke-width="4", fill="none", cx="20", cy="20", r="10")


      +row(1)
      +row(2)
      +row(3)