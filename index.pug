doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    title 10k Apart
  body
    header
      h1 Test
      nav(aria-label='Main Navigation')
        ul(role='tablist')
          li(role='presentation')
            a#pageTab1(href='#pagePanel1', aria-controls='pagePanel1', aria-selected='true', role='tab') Page 1
          li(role='presentation')
            a#pageTab2(href='#pagePanel2', aria-controls='pagePanel2', aria-selected='false', role='tab') Page 2
    main
      section#pagePanel1(aria-labelledby='pageTab1', aria-hidden='false', role='tabpanel')
        h2 Page 1 Content
      section#pagePanel2(aria-labelledby='pageTab2', aria-hidden='true', role='tabpanel')
        h2 Page 2 Content
    footer
      h2 By Danielle
